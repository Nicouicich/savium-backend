# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=Savium AI Backend
APP_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/savium_dev
MONGODB_TEST_URI=mongodb://localhost:27017/savium_test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_ACCESS_SECRET=your-very-secure-access-token-secret-key-here
JWT_REFRESH_SECRET=your-very-secure-refresh-token-secret-key-here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
THROTTLE_SKIP_IF=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Apple OAuth (Sign in with Apple)
APPLE_CLIENT_ID=your-apple-client-id-here
APPLE_TEAM_ID=your-apple-team-id-here
APPLE_KEY_ID=your-apple-key-id-here
APPLE_PRIVATE_KEY=your-apple-private-key-here
APPLE_CALLBACK_URL=http://localhost:3000/auth/apple/callback

# OAuth Frontend Redirects
OAUTH_SUCCESS_REDIRECT_URL=http://localhost:3001/auth/success
OAUTH_FAILURE_REDIRECT_URL=http://localhost:3001/auth/failure

# External API Keys
OPENAI_API_KEY=your-openai-api-key-here
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token-here
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token-here
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Swagger Configuration
SWAGGER_TITLE=Savium AI API
SWAGGER_DESCRIPTION=Complete API for Savium AI financial management platform
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=api/docs

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@savium.ai

# Production specific (comment out in development)
# DATABASE_URL=your-production-mongodb-uri
# REDIS_URL=your-production-redis-uri