# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=Savium AI Backend
APP_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/savium_dev
MONGODB_TEST_URI=mongodb://localhost:27017/savium_test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_ACCESS_SECRET=your-very-secure-access-token-secret-key-here
JWT_REFRESH_SECRET=your-very-secure-refresh-token-secret-key-here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
THROTTLE_SKIP_IF=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# OAuth Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-app-id-here
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret-here
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/facebook/callback

# OAuth Frontend Redirects
OAUTH_SUCCESS_REDIRECT_URL=http://localhost:3001/auth/success
OAUTH_FAILURE_REDIRECT_URL=http://localhost:3001/auth/failure

# External API Keys
OPENAI_API_KEY=your-openai-api-key-here
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token-here
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token-here
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here
AWS_S3_BUCKET_NAME=savium-dev
# AWS S3 Advanced Settings (optional)
AWS_S3_ENDPOINT=
AWS_S3_FORCE_PATH_STYLE=false
AWS_S3_UPLOAD_TIMEOUT=60000
AWS_S3_MAX_FILE_SIZE=52428800
AWS_S3_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,audio/mpeg,audio/wav,audio/ogg,audio/mp4,application/pdf
AWS_S3_PRESIGNED_URL_EXPIRATION=3600
AWS_S3_CDN_DOMAIN=
AWS_S3_PUBLIC_READ=false

# AWS S3 Encryption Settings
AWS_S3_ENCRYPTION_ENABLED=true
AWS_S3_ENCRYPTION_ALGORITHM=AES256
AWS_S3_KMS_KEY_ID=

# AWS S3 Storage Class and Lifecycle
AWS_S3_STORAGE_CLASS=STANDARD
AWS_S3_TRANSITION_TO_IA=30
AWS_S3_TRANSITION_TO_GLACIER=90
AWS_S3_EXPIRATION=2555

# AWS SNS Configuration (for SMS)
AWS_SNS_ENABLED=true
AWS_SNS_REGION=us-east-1
AWS_SNS_SENDER_ID=Savium
AWS_SNS_SMS_TYPE=Transactional
AWS_SNS_MAX_PRICE=1.00

# SMS Verification Settings
AWS_SNS_CODE_LENGTH=6
AWS_SNS_CODE_EXPIRATION=5
AWS_SNS_MAX_ATTEMPTS=3
AWS_SNS_COOLDOWN=1
AWS_SNS_MAX_PER_DAY=10
AWS_SNS_MAX_PER_HOUR=5

# SMS Regional and Security Settings
AWS_SNS_ALLOWED_REGIONS=US,CA,MX,GB,DE,FR,ES,IT,BR,AR,CO,PE,CL,UY,EC,BO,PY,VE,SR,GY,GF
AWS_SNS_BLACKLISTED_COUNTRIES=
AWS_SNS_MESSAGE_TEMPLATE=Your Savium verification code is: {code}. Valid for {expiration} minutes.

# Swagger Configuration
SWAGGER_TITLE=Savium AI API
SWAGGER_DESCRIPTION=Complete API for Savium AI financial management platform
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=api/docs

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@savium.ai

# Firebase Configuration
# Firebase Web API Key (for SMS REST API)
FIREBASE_WEB_API_KEY=your-firebase-web-api-key

# Firebase Project Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_SERVICE_ACCOUNT_KEY=your-firebase-service-account-json
FIREBASE_SERVICE_ACCOUNT_PATH=path/to/service-account.json
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Firebase SMS Verification Configuration
FIREBASE_SMS_ENABLED=true
FIREBASE_SMS_CODE_LENGTH=6
FIREBASE_SMS_CODE_EXPIRATION=5
FIREBASE_SMS_MAX_ATTEMPTS=3
FIREBASE_SMS_COOLDOWN=1

# Firebase Security Configuration
FIREBASE_ALLOWED_REGIONS=US,CA,MX,GB,DE,FR,ES,IT,BR,AR
FIREBASE_STRICT_PHONE_VALIDATION=false
FIREBASE_ALLOW_LANDLINES=false
FIREBASE_REQUIRE_MOBILE_ONLY=true
FIREBASE_ENABLE_SECURITY_RULES=true
FIREBASE_DEFAULT_TIMEOUT=30000
FIREBASE_VERIFICATION_TIMEOUT=60000
FIREBASE_ADMIN_TIMEOUT=10000
FIREBASE_MAX_RETRIES=3
FIREBASE_RETRY_DELAY=1000
FIREBASE_BACKOFF_MULTIPLIER=2.0
FIREBASE_DEBUG_MODE=false
FIREBASE_TEST_MODE=false

# Production specific (comment out in development)
# DATABASE_URL=your-production-mongodb-uri
# REDIS_URL=your-production-redis-uri